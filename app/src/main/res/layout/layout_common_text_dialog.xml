<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.nyotek.dot.admin.widgets.NSConstraintLayout
        android:id="@+id/cl_border_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_4sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.nyotek.dot.admin.widgets.NSCommonEditText
            android:id="@+id/edt_value"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@null"
            android:fontFamily="@font/archivo_regular"
            android:textSize="@dimen/_5sdp"
            android:lines="1"
            android:maxLines="1"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textAlignment="viewStart"
            android:imeOptions="actionNext"
            android:paddingHorizontal="@dimen/_6sdp"
            android:importantForAutofill="noExcludeDescendants"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </com.nyotek.dot.admin.widgets.NSConstraintLayout>

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:paddingHorizontal="@dimen/_1sdp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.nyotek.dot.admin.widgets.NSGrayTextView
            android:id="@+id/tv_common_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Name"
            android:fontFamily="@font/archivo_medium"
            android:textSize="@dimen/_4sdp" />

    </RelativeLayout>

    <com.nyotek.dot.admin.widgets.NSCommonRecycleView
        android:id="@+id/rv_language_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/_6sdp"
        android:visibility="gone"
        app:layout_constrainedWidth="true"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/layout_language_title_item_text"
        app:layout_constraintStart_toEndOf="@id/rl_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/rl_title"
        app:layout_constraintBottom_toBottomOf="@id/rl_title"/>

</androidx.constraintlayout.widget.ConstraintLayout>