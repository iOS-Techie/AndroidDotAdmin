<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/_7sdp"
    android:paddingEnd="@dimen/_3sdp"
    android:paddingStart="0dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.nyotek.dot.admin.widgets.NSPrimaryTextView
        android:id="@+id/tv_language_title"
        android:layout_width="wrap_content"
        tools:text="en-us"
        android:minWidth="@dimen/_15sdp"
        android:layout_height="@dimen/_6sdp"
        android:textSize="@dimen/_4sdp"
        android:paddingHorizontal="@dimen/_2sdp"
        android:gravity="center"
        android:visibility="visible"
        android:textColor="@color/white"
        android:includeFontPadding="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.nyotek.dot.admin.widgets.NSPrimaryTextView
        android:id="@+id/spinner_language_add"
        android:layout_width="@dimen/_6sdp"
        android:layout_height="@dimen/_6sdp"
        tools:text="+"
        android:minWidth="@dimen/_14sdp"
        android:background="@null"
        android:visibility="visible"
        android:textSize="@dimen/_4sdp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_language_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>