<?xml version="1.0" encoding="utf-8"?>
<com.nyotek.dot.admin.widgets.NSConstraintLayout android:id="@+id/cl_settings_bg" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.settings.NSSettingFragment">

    <com.nyotek.dot.admin.widgets.NSConstraintLayout
        android:id="@+id/cl_header_settings"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_25sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/rl_icon_app"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <com.nyotek.dot.admin.widgets.ImageIconView
                android:id="@+id/iv_brand_icon"
                android:layout_width="@dimen/_29sdp"
                android:layout_height="@dimen/_10sdp"
                android:gravity="center"
                android:visibility="visible"
                android:layout_centerInParent="true"
                android:contentDescription="@string/app_admin_name" />

        </RelativeLayout>

        <com.nyotek.dot.admin.widgets.NSViewLine
            android:id="@+id/view_line_header"
            android:layout_width="@dimen/_1sdp"
            android:layout_height="@dimen/_16sdp"
            app:layout_constraintStart_toEndOf="@id/rl_icon_app"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <com.nyotek.dot.admin.widgets.NSPrimaryTextView
            android:id="@+id/tv_setting_title"
            style="@style/LayoutWidthHeightZeroWrap"
            android:textSize="@dimen/_5sdp"
            android:paddingHorizontal="@dimen/_8sdp"
            android:fontFamily="@font/archivo_semi_bold"
            app:layout_constraintStart_toEndOf="@id/view_line_header"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <com.nyotek.dot.admin.widgets.NSPrimaryTextView
            android:id="@+id/tv_back_settings"
            android:layout_width="wrap_content"
            android:minWidth="@dimen/_43sdp"
            android:layout_height="@dimen/_14sdp"
            android:layout_marginEnd="@dimen/_7sdp"
            android:gravity="center"
            android:textSize="@dimen/_4sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_save_settings"
            app:layout_constraintTop_toTopOf="parent" />

        <com.nyotek.dot.admin.widgets.NSWhiteTextView
            android:id="@+id/tv_save_settings"
            android:layout_width="wrap_content"
            android:minWidth="@dimen/_43sdp"
            android:layout_height="@dimen/_14sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:gravity="center"
            android:visibility="gone"
            android:textSize="@dimen/_4sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </com.nyotek.dot.admin.widgets.NSConstraintLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_header_settings"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="@dimen/_9sdp"
        android:layout_marginVertical="@dimen/_9sdp"
        android:background="@drawable/white_round_12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_line">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_settings_users"
            style="@style/LayoutWidthHeightWrap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/layout_setting_item"
            android:paddingHorizontal="@dimen/_6sdp"
            android:layout_marginEnd="@dimen/_3sdp"
            android:overScrollMode="never"/>

        <View
            android:id="@+id/view_line_register"
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:background="@color/line_divider"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_settings"
            style="@style/LayoutWidthHeightWrap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            tools:listitem="@layout/layout_setting_item"
            android:paddingHorizontal="@dimen/_9sdp"
            android:paddingTop="0dp"
            android:paddingBottom="@dimen/_6sdp"
            />
    </LinearLayout>

</com.nyotek.dot.admin.widgets.NSConstraintLayout>