<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_main_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_18sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.nyotek.dot.admin.widgets.NSPrimaryLightTextView
            android:id="@+id/tv_item_title"
            style="@style/LayoutWidthHeightZeroWrap"
            android:textAppearance="@style/CommonTextMedium"
            android:gravity="start"
            android:textAlignment="viewStart"
            tools:text="Name"
            android:lines="1"
            android:textSize="@dimen/_3sdp"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_detail"
            />

        <com.nyotek.dot.admin.widgets.NSPrimaryTextView
            android:id="@+id/tv_detail"
            style="@style/LayoutWidthHeightZeroWrap"
            android:textAppearance="@style/CommonTextRegular"
            android:textSize="@dimen/_4ssp"
            android:gravity="start"
            android:textAlignment="viewStart"
            android:lines="1"
            tools:text="Bessie Copper"
            android:layout_marginTop="@dimen/_2sdp"
            android:includeFontPadding="false"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_item_title"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>