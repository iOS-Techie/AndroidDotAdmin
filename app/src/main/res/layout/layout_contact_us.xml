<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/_170sdp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/half_top_white">

        <View
            android:id="@+id/view_line_top"
            android:layout_width="@dimen/_92sdp"
            android:layout_height="@dimen/_3sdp"
            android:visibility="gone"
            android:layout_marginTop="@dimen/_8sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_top_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_line_top">

            <com.nyotek.dot.admin.widgets.NSPrimaryTextView
                android:id="@+id/tv_contact_us_title"
                style="@style/LayoutWidthHeightZeroWrap"
                android:layout_height="@dimen/_20sdp"
                android:gravity="center"
                android:textSize="@dimen/_5sdp"
                android:alpha="0.5"
                tools:text="Contact us"
                android:fontFamily="@font/archivo_medium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <com.nyotek.dot.admin.widgets.NSViewLine
                android:id="@+id/view_line"
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:layout_marginHorizontal="@dimen/_5sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_contact_us_title"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/btn_cl_email"
                style="@style/LayoutWidthHeightZeroWrap"
                android:layout_height="@dimen/_14sdp"
                android:layout_marginHorizontal="@dimen/_9sdp"
                android:layout_marginTop="@dimen/_4sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_line">

                <com.nyotek.dot.admin.widgets.ImageIconView
                    android:id="@+id/iv_email"
                    android:layout_width="@dimen/_6sdp"
                    android:layout_height="@dimen/_6sdp"
                    android:src="@drawable/ic_email_c"
                    app:layout_constraintDimensionRatio="H,1:1"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tv_email"
                    />

                <com.nyotek.dot.admin.widgets.NSPrimaryTextView
                    android:id="@+id/tv_email"
                    style="@style/LayoutWidthHeightWrap"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:textSize="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:includeFontPadding="false"
                    android:fontFamily="@font/archivo_medium"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toEndOf="@id/iv_email"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/btn_cl_call"
                style="@style/LayoutWidthHeightZeroWrap"
                android:layout_height="@dimen/_14sdp"
                android:layout_marginHorizontal="@dimen/_9sdp"
                android:layout_marginTop="@dimen/_6sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_cl_email">

                <com.nyotek.dot.admin.widgets.ImageIconView
                    android:id="@+id/iv_call"
                    android:layout_width="@dimen/_6sdp"
                    android:layout_height="@dimen/_6sdp"
                    android:src="@drawable/ic_phone"
                    app:layout_constraintDimensionRatio="H,1:1"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tv_call"
                    />

                <com.nyotek.dot.admin.widgets.NSPrimaryTextView
                    android:id="@+id/tv_call"
                    style="@style/LayoutWidthHeightWrap"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:textSize="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:includeFontPadding="false"
                    android:fontFamily="@font/archivo_medium"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toEndOf="@id/iv_call"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.nyotek.dot.admin.widgets.NSPrimaryTextView
            android:id="@+id/tv_cancel_contact_us"
            style="@style/LayoutWidthHeightZeroWrap"
            android:layout_height="@dimen/_20sdp"
            android:gravity="center"
            android:textSize="@dimen/_5sdp"
            android:fontFamily="@font/archivo_bold"
            app:layout_constraintTop_toBottomOf="@id/cl_top_contact"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
