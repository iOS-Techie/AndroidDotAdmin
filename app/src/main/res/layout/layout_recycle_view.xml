<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.nyotek.dot.admin.widgets.NSConstraintLayout
        android:id="@+id/cl_border_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_4sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_select_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <CheckBox
                android:id="@+id/cb_check"
                android:layout_width="@dimen/_6sdp"
                android:layout_height="@dimen/_6sdp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:button="@drawable/checkbox_fill_fix"
                android:clickable="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <com.nyotek.dot.admin.widgets.NSPrimaryTextView
                android:id="@+id/tv_select_all_title"
                style="@style/LayoutWidthHeightZeroWrap"
                android:gravity="start"
                android:lines="1"
                android:paddingStart="@dimen/_3sdp"
                android:paddingEnd="@dimen/_4sdp"
                android:textAppearance="@style/CommonTextInter500"
                android:textSize="@dimen/_5sdp"
                android:textAlignment="viewStart"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cb_check"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Select All" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_common_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:paddingBottom="@dimen/_5sdp"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:orientation="vertical"
            tools:listitem="@layout/layout_service_item"
            app:spanCount="2"
            android:layout_marginTop="@dimen/_3sdp"
            android:paddingHorizontal="@dimen/_6sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl_select_all" />

    </com.nyotek.dot.admin.widgets.NSConstraintLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:paddingHorizontal="@dimen/_1sdp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.nyotek.dot.admin.widgets.NSPrimaryTextView
            android:id="@+id/tv_common_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.5"
            tools:text="Name"
            android:fontFamily="@font/archivo_medium"
            android:textSize="@dimen/_5sdp" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>