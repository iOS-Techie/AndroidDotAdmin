<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.nyotek.dot.admin.widgets.NSConstraintLayout
        android:id="@+id/cl_border_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_4sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Spinner
            android:id="@+id/spinner_app_select"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@null"
            android:fontFamily="@font/archivo_regular"
            android:textSize="@dimen/_2sdp"
            android:textAlignment="viewStart"
            android:imeOptions="actionNext"
            android:paddingHorizontal="@dimen/_6sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="start"
            android:spinnerMode="dropdown"
            android:overlapAnchor="false"/>

        <ImageView
            android:id="@+id/iv_spinner_ico"
            android:layout_width="@dimen/_8sdp"
            android:layout_height="@dimen/_8sdp"
            app:layout_constraintDimensionRatio="W,1:1"
            android:src="@drawable/ic_spinner_drop_down"
            android:layout_marginEnd="@dimen/_5sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/spinner_app_select"
            app:layout_constraintBottom_toBottomOf="@id/spinner_app_select"/>

    </com.nyotek.dot.admin.widgets.NSConstraintLayout>

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:paddingHorizontal="@dimen/_1sdp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.nyotek.dot.admin.widgets.NSPrimaryTextView
            android:id="@+id/tv_common_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.5"
            tools:text="Name"
            android:fontFamily="@font/archivo_regular"
            android:textSize="@dimen/_5sdp" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>