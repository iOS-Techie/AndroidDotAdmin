<?xml version="1.0" encoding="utf-8"?>
<com.nyotek.dot.admin.widgets.NSConstraintLayout android:id="@+id/cl_login_bg" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.nyotek.dot.admin.widgets.NSConstraintLayout
        android:id="@+id/cl_left_with_bg"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cl_right">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_5sdp"
            android:src="@drawable/background_mask"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/iv_app_icon"
            android:layout_width="@dimen/_33sdp"
            android:layout_height="@dimen/_33sdp"
            android:src="@drawable/app_icon_corner"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_app_name"/>

        <com.nyotek.dot.admin.widgets.NSWhiteTextView
            android:id="@+id/tv_app_name"
            style="@style/LayoutWidthHeightWrap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_700"
            android:text="@string/app_small_name"
            android:textColor="@color/white"
            android:textSize="@dimen/_11sdp"
            android:layout_marginTop="@dimen/_4sdp"
            app:layout_constraintTop_toBottomOf="@id/iv_app_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </com.nyotek.dot.admin.widgets.NSConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_right"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:paddingHorizontal="@dimen/_42sdp"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintStart_toEndOf="@id/cl_left_with_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/iv_emoji"
            android:layout_width="@dimen/_11sdp"
            android:layout_height="@dimen/_11sdp"
            android:src="@drawable/ic_password_emoji"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintBottom_toTopOf="@id/tv_welcome_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.nyotek.dot.admin.widgets.NSPrimaryTextView
            android:id="@+id/tv_welcome_back"
            style="@style/LayoutWidthHeightWrap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_600"
            tools:text="Password Reset"
            android:textSize="@dimen/_9sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_1sdp"
            app:layout_constraintBottom_toTopOf="@id/tv_sub_title"
            app:layout_constraintTop_toBottomOf="@id/iv_emoji"
            app:layout_constraintStart_toStartOf="parent" />

        <com.nyotek.dot.admin.widgets.NSPrimaryLightTextView
            android:id="@+id/tv_sub_title"
            style="@style/LayoutWidthHeightWrap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_400"
            tools:text="Enter your email and we will send you a reset link"
            android:textSize="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginStart="@dimen/_1sdp"
            app:layout_constraintBottom_toTopOf="@id/view_line"
            app:layout_constraintTop_toBottomOf="@id/tv_welcome_back"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/view_line"
            android:layout_width="@dimen/_13sdp"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginStart="@dimen/_1sdp"
            app:layout_constraintBottom_toTopOf="@id/tv_email_phone_title"
            app:layout_constraintTop_toBottomOf="@id/tv_sub_title"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.nyotek.dot.admin.widgets.NSPrimaryTextView
            android:id="@+id/tv_email_phone_title"
            style="@style/LayoutWidthHeightWrap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_500"
            tools:text="E-mail or phone number"
            android:textSize="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_11sdp"
            android:layout_marginStart="@dimen/_1sdp"
            app:layout_constraintTop_toBottomOf="@id/view_line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/et_email_phone"/>

        <EditText
            android:id="@+id/et_email_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_15sdp"
            style="@style/LoginFontsZeroWrap"
            android:autofillHints="emailAddress"
            android:gravity="start|center_vertical"
            android:background="@null"
            android:fontFamily="@font/archivo_medium"
            android:textSize="@dimen/_5sdp"
            android:paddingHorizontal="@dimen/_5sdp"
            tools:text="Type your e-mail or phone number"
            android:includeFontPadding="false"
            android:inputType="text"
            android:textAlignment="viewStart"
            android:layout_marginHorizontal="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_3sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_email_phone_title"
            app:layout_constraintBottom_toTopOf="@id/btn_reset"
            tools:ignore="TextFields" />

        <com.nyotek.dot.admin.widgets.NSWhiteTextView
            android:id="@+id/btn_reset"
            android:layout_width="0dp"
            android:layout_height="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:textAllCaps="false"
            android:textSize="@dimen/_6sdp"
            android:gravity="center"
            android:fontFamily="@font/inter_600"
            android:layout_marginHorizontal="@dimen/_1sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_email_phone"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.nyotek.dot.admin.widgets.NSConstraintLayout>