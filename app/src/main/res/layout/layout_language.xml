<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/_170sdp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/half_top_white">

        <com.nyotek.dot.admin.widgets.NSPrimaryTextView
            android:id="@+id/tv_language_title"
            style="@style/LayoutWidthHeightZeroWrap"
            android:layout_height="@dimen/_20sdp"
            android:gravity="center"
            android:textSize="@dimen/_5sdp"
            android:alpha="0.5"
            tools:text="Select Language"
            android:fontFamily="@font/archivo_medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.nyotek.dot.admin.widgets.NSViewLine
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_marginHorizontal="@dimen/_5sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_language_title"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_language"
            style="@style/LayoutWidthHeightZeroWrap"
            tools:listitem="@layout/layout_language_item"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_line"/>

        <com.nyotek.dot.admin.widgets.NSPrimaryTextView
            android:id="@+id/tv_cancel_language_dialog"
            style="@style/LayoutWidthHeightZeroWrap"
            android:layout_height="@dimen/_20sdp"
            android:gravity="center"
            android:textSize="@dimen/_5sdp"
            tools:text="Cancel"
            android:fontFamily="@font/archivo_bold"
            app:layout_constraintTop_toBottomOf="@id/rv_language"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
