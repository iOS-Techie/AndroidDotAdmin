<?xml version="1.0" encoding="utf-8"?>
<com.nyotek.dot.admin.widgets.NSConstraintLayout android:id="@+id/cl_user_detail_bg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:id="@+id/layout_header"
        layout="@layout/layout_home_header"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/srl_refresh"
        style="@style/LayoutWidthHeightZero"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_user_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clipToPadding="false"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginHorizontal="@dimen/_9sdp"
            android:layout_marginVertical="@dimen/_9sdp"
            android:paddingVertical="@dimen/_7sdp"
            android:paddingHorizontal="@dimen/_7sdp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_profile_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_profile_bg"
                    android:layout_width="@dimen/_47sdp"
                    android:layout_height="@dimen/_47sdp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="@dimen/_100sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/iv_profile_logo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_profile_preview"
                        android:contentDescription="@string/description"/>

                </androidx.cardview.widget.CardView>

                <com.nyotek.dot.admin.widgets.NSConstraintLayout
                    android:id="@+id/cl_profile_edit_ico"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_1sdp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <ImageView
                        android:layout_width="@dimen/_7sdp"
                        android:layout_height="@dimen/_7sdp"
                        android:src="@drawable/ic_edit_white"
                        android:contentDescription="@string/description"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                </com.nyotek.dot.admin.widgets.NSConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <include android:id="@+id/layout_name"
                layout="@layout/layout_common_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/layout_last_name"
                app:layout_constraintTop_toBottomOf="@id/cl_profile_img"/>

            <include android:id="@+id/layout_last_name"
                layout="@layout/layout_common_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_7sdp"
                app:layout_constraintTop_toTopOf="@id/layout_name"
                app:layout_constraintEnd_toStartOf="@id/layout_bio"
                app:layout_constraintStart_toEndOf="@id/layout_name"/>

            <include android:id="@+id/layout_bio"
                layout="@layout/layout_common_multiline_text_bio"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/_7sdp"
                app:layout_constraintBottom_toBottomOf="@id/layout_birthday"
                app:layout_constraintTop_toTopOf="@id/layout_last_name"
                app:layout_constraintStart_toEndOf="@id/layout_last_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cl_profile_img"/>

            <include android:id="@+id/layout_email"
                layout="@layout/layout_common_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                app:layout_constraintStart_toStartOf="@id/layout_name"
                app:layout_constraintEnd_toEndOf="@id/layout_name"
                app:layout_constraintTop_toBottomOf="@id/layout_name"/>

            <include android:id="@+id/layout_birthday"
                layout="@layout/layout_common_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/layout_last_name"
                app:layout_constraintEnd_toEndOf="@id/layout_last_name"
                app:layout_constraintTop_toTopOf="@id/layout_email"
                app:layout_constraintBottom_toBottomOf="@id/layout_email" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</com.nyotek.dot.admin.widgets.NSConstraintLayout>