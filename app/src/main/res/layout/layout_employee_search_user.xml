<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/LayoutWidthHeightMatchWrap"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_item_select"
        style="@style/LayoutWidthHeightWrap"
        android:layout_width="match_parent"
        android:minHeight="@dimen/_16sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.nyotek.dot.admin.widgets.ImageIconView
            android:id="@+id/iv_user"
            android:layout_width="@dimen/_7sdp"
            android:layout_height="0dp"
            android:src="@drawable/ic_user_m"
            android:layout_marginStart="@dimen/_5sdp"
            app:layout_constraintDimensionRatio="W,1:1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/view_line"
            android:contentDescription="@string/description" />

        <com.nyotek.dot.admin.widgets.NSPrimaryTextView
            android:id="@+id/tv_item_title"
            style="@style/LayoutWidthHeightZeroWrap"
            android:minHeight="@dimen/_16sdp"
            android:textAppearance="@style/CommonTextMedium"
            android:gravity="start|center_vertical"
            android:lines="1"
            tools:text="Crystal Schmidt"
            android:paddingStart="@dimen/_4sdp"
            android:paddingEnd="0dp"
            app:layout_constraintStart_toEndOf="@id/iv_user"
            app:layout_constraintEnd_toStartOf="@+id/iv_correct"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/view_line"/>

        <ImageView
            android:id="@+id/iv_correct"
            android:layout_width="@dimen/_7sdp"
            android:layout_height="@dimen/_7sdp"
            android:src="@drawable/ic_correct"
            android:layout_marginEnd="@dimen/_3sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/view_line"
            android:visibility="gone"
            android:contentDescription="@string/description" />

        <View
            android:id="@+id/view_line"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/line_divider"
            android:layout_marginStart="@dimen/_5sdp"
            app:layout_constraintStart_toEndOf="@+id/iv_user"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>