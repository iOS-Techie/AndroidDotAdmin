<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fleets.vehicle.detail.NSVehicleDetailFragment">

    <include
        android:id="@+id/layout_home_header"
        layout="@layout/layout_home_header" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsv_recycle"
        android:layout_width="@dimen/_98sdp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:paddingBottom="@dimen/_2sdp"
        android:paddingTop="0dp"
        android:background="@drawable/white_round_12"
        app:layout_constraintEnd_toStartOf="@id/cl_map"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_home_header">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_vehicle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.nyotek.dot.admin.widgets.NSPrimaryTextView
                android:id="@+id/tv_vehicle_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:paddingHorizontal="@dimen/_6sdp"
                android:paddingVertical="@dimen/_3sdp"
                android:textAppearance="@style/CommonTextSemiBold"
                android:textSize="@dimen/_5sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Driver Details" />

            <com.nyotek.dot.admin.widgets.NSPrimaryLightTextView
                android:id="@+id/tv_vehicle_active"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:paddingHorizontal="@dimen/_5sdp"
                android:textAppearance="@style/CommonTextRegular"
                android:textSize="@dimen/_4sdp"
                app:layout_constraintBottom_toBottomOf="@id/tv_vehicle_title"
                app:layout_constraintEnd_toStartOf="@+id/switch_service"
                app:layout_constraintTop_toTopOf="@id/tv_vehicle_title"
                tools:text="Active" />

            <ImageView
                android:id="@+id/switch_service"
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_7sdp"
                android:layout_marginEnd="@dimen/_6sdp"
                android:src="@drawable/ic_switch_off"
                app:layout_constraintBottom_toBottomOf="@id/tv_vehicle_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_vehicle_title"
                android:importantForAccessibility="no" />

            <com.nyotek.dot.admin.widgets.NSViewLine
                android:id="@+id/view_line_text_divider"
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_vehicle_title" />

            <com.nyotek.dot.admin.widgets.ImageIconView
                android:id="@+id/ic_driver_detail_user"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:src="@drawable/ic_user"
                android:layout_marginTop="@dimen/_5sdp"
                android:padding="@dimen/_4sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_vehicle_title" />

            <com.nyotek.dot.admin.widgets.NSViewLine
                android:id="@+id/view_line_text"
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:layout_marginHorizontal="@dimen/_6sdp"
                android:layout_marginTop="@dimen/_5sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ic_driver_detail_user" />

            <include
                android:id="@+id/layout_name"
                layout="@layout/layout_common_v_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_line_text" />

            <include
                android:id="@+id/layout_fleet"
                layout="@layout/layout_common_v_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_name" />

            <com.nyotek.dot.admin.widgets.NSConstraintLayout
                android:id="@+id/cl_vehicle_detail_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginHorizontal="@dimen/_2sdp"
                android:padding="@dimen/_4sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_fleet">

                <com.nyotek.dot.admin.widgets.NSConstraintLayout
                    android:id="@+id/cl_vehicle_detail_sub_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <include
                        android:id="@+id/spinner_role"
                        layout="@layout/layout_common_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginHorizontal="@dimen/_4sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <include
                        android:id="@+id/spinner"
                        layout="@layout/layout_common_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginHorizontal="@dimen/_4sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/spinner_role" />

                    <com.nyotek.dot.admin.widgets.NSViewLine
                        android:id="@+id/view_line_text_sub"
                        android:layout_width="match_parent"
                        android:layout_height="0.6dp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:visibility="invisible"
                        app:layout_constraintTop_toBottomOf="@id/spinner"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_driver_item"
                        style="@style/LayoutWidthHeightZeroWrap"
                        android:layout_height="@dimen/_25sdp"
                        android:paddingHorizontal="@dimen/_4sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/view_line_text_sub">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_img"
                            android:layout_width="@dimen/_14sdp"
                            android:layout_height="@dimen/_14sdp"
                            app:cardElevation="0dp"
                            app:cardCornerRadius="@dimen/_2sdp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent">

                            <ImageView
                                android:id="@+id/ic_driver_img"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:importantForAccessibility="no" />

                        </androidx.cardview.widget.CardView>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cl_vehicle_item2"
                            style="@style/LayoutWidthHeightZeroWrap"
                            android:layout_marginStart="@dimen/_4sdp"
                            app:layout_constraintEnd_toStartOf="@id/iv_delete"
                            app:layout_constraintStart_toEndOf="@id/card_img"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent">

                            <com.nyotek.dot.admin.widgets.NSPrimaryTextView
                                android:id="@+id/tv_user_title"
                                style="@style/LayoutWidthHeightZeroWrap"
                                android:gravity="start"
                                android:lines="1"
                                android:paddingStart="0dp"
                                android:paddingEnd="@dimen/_4sdp"
                                android:textAppearance="@style/CommonTextMedium"
                                android:textSize="@dimen/_5sdp"
                                android:textAlignment="viewStart"
                                app:layout_constraintBottom_toTopOf="@id/tv_status"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_chainStyle="packed"
                                tools:text="Employee 01" />

                            <com.nyotek.dot.admin.widgets.NSPrimaryLightTextView
                                android:id="@+id/tv_status"
                                style="@style/LayoutWidthHeightWrap"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:gravity="start"
                                android:lines="1"
                                android:paddingStart="0dp"
                                android:paddingEnd="@dimen/_5sdp"
                                android:textAlignment="viewStart"
                                android:textAppearance="@style/CommonTextMedium"
                                android:textSize="@dimen/_4ssp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/tv_user_title"
                                tools:text="654 658 579 143" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <ImageView
                            android:id="@+id/iv_delete"
                            android:layout_width="@dimen/_7sdp"
                            android:layout_height="0dp"
                            android:layout_marginEnd="@dimen/_2sdp"
                            android:src="@drawable/ic_delete_employee"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:importantForAccessibility="no" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.nyotek.dot.admin.widgets.NSConstraintLayout>

            </com.nyotek.dot.admin.widgets.NSConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_map"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/_8sdp"
        android:background="@drawable/white_round_12"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/nsv_recycle"
        app:layout_constraintTop_toBottomOf="@id/layout_home_header">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.mapbox.maps.MapView
                android:id="@+id/map_fragment_driver"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>