<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/LayoutWidthHeightMatchWrap"
    android:layout_marginTop="@dimen/_6sdp"
    android:layout_marginStart="@dimen/_6sdp"
    android:background="@drawable/white_round_10"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/LayoutWidthHeightZeroWrap"
        android:minHeight="@dimen/_60sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_driver_top"
            style="@style/LayoutWidthHeightZeroWrap"
            android:layout_height="@dimen/_12sdp"
            android:paddingStart="@dimen/_4sdp"
            android:paddingEnd="@dimen/_2sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.nyotek.dot.admin.widgets.NSPrimaryTextView
                android:id="@+id/tv_item_active"
                style="@style/LayoutWidthHeightZeroWrap"
                android:textAppearance="@style/CommonTextMedium"
                android:gravity="center_vertical|start"
                android:lines="1"
                android:alpha="0.6"
                android:textSize="@dimen/_4sdp"
                app:layout_constraintVertical_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <ImageView
                android:id="@+id/switch_service"
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_7sdp"
                android:src="@drawable/ic_switch_off"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/view_line_driver"
            android:layout_width="0dp"
            android:layout_height="0.6dp"
            android:background="@color/line_divider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_driver_top"/>

        <com.nyotek.dot.admin.widgets.NSPrimaryTextView
            android:id="@+id/tv_item_title"
            style="@style/LayoutWidthHeightZeroWrap"
            android:textAppearance="@style/CommonTextMedium"
            android:gravity="center"
            tools:text="Yamin"
            android:lines="1"
            android:textSize="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_8sdp"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_line_driver"
            />

        <com.nyotek.dot.admin.widgets.NSPrimaryTextView
            android:id="@+id/tv_date"
            style="@style/LayoutWidthHeightZeroWrap"
            android:textAppearance="@style/CommonTextRegular"
            android:textSize="@dimen/_4ssp"
            android:gravity="center"
            android:lines="1"
            tools:text="15/01/2023"
            android:layout_marginTop="@dimen/_1sdp"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_item_title"
            />

        <com.nyotek.dot.admin.widgets.NSPrimaryLightTextView
            android:id="@+id/tv_description"
            style="@style/LayoutWidthHeightZeroWrap"
            android:textAppearance="@style/CommonTextRegular"
            android:textSize="@dimen/_3ssp"
            android:gravity="center"
            android:lines="1"
            tools:text="15/01/2023"
            android:layout_marginTop="@dimen/_1sdp"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_date"
            />

        <View
            android:id="@+id/view_line_driver2"
            android:layout_width="0dp"
            android:layout_height="0.6dp"
            android:background="@color/line_divider"
            android:layout_marginTop="@dimen/_8sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_description"/>

        <include
            android:id="@+id/spinner"
            layout="@layout/layout_common_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginHorizontal="@dimen/_4sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_line_driver2"/>

        <include android:id="@+id/layout_fleets"
            layout="@layout/layout_recycle_view_fix"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginHorizontal="@dimen/_4sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/spinner"/>

        <View
            android:id="@+id/view_line"
            android:layout_width="0dp"
            android:layout_height="0.6dp"
            android:background="@color/line_divider"
            android:layout_marginTop="@dimen/_4sdp"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@+id/layout_fleets"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_view_more"
            android:layout_width="0dp"
            android:layout_height="@dimen/_13sdp"
            android:visibility="gone"
            android:background="@drawable/half_bottom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_line">

            <LinearLayout
                style="@style/LayoutWidthHeightWrap"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:ignore="UseCompoundDrawables">

                <com.nyotek.dot.admin.widgets.NSPrimaryTextView
                    android:id="@+id/tv_view_more"
                    style="@style/LayoutWidthHeightWrap"
                    android:textAppearance="@style/CommonTextRegular"
                    android:textSize="@dimen/_4ssp"
                    android:gravity="center_vertical|end"
                    android:lines="1"
                    android:paddingHorizontal="@dimen/_2sdp" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>