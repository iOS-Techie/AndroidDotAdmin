<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ll_status_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/view1"
            android:layout_width="@dimen/_1sdp"
            android:layout_height="@dimen/_5sdp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@id/iv_status_timeline"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="@id/iv_status_timeline"/>

        <ImageView
            android:id="@+id/iv_status_timeline"
            android:layout_width="@dimen/_8sdp"
            android:layout_height="@dimen/_8sdp"
            android:scaleType="fitXY"
            android:background="@drawable/ic_order_status_un_selected"
            android:contentDescription="@string/description"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/_5sdp"
            app:layout_constraintTop_toBottomOf="@id/view1" />

        <View
            android:id="@+id/view2"
            android:layout_width="@dimen/_1sdp"
            android:orientation="horizontal"
            android:layout_height="@dimen/_8sdp"
            android:layout_gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/iv_status_timeline"
            app:layout_constraintStart_toStartOf="@id/iv_status_timeline"
            app:layout_constraintEnd_toEndOf="@id/iv_status_timeline"/>

        <com.nyotek.dot.admin.widgets.NSPrimaryTextView
            android:id="@+id/tv_status_title"
            style="@style/LayoutWidthHeightZeroWrap"
            tools:text="Order Placed"
            android:textSize="@dimen/_4sdp"
            android:textAlignment="viewStart"
            android:fontFamily="@font/archivo_semi_bold"
            android:paddingStart="@dimen/_4sdp"
            android:paddingEnd="@dimen/_2sdp"
            android:includeFontPadding="false"
            app:layout_constraintStart_toEndOf="@id/iv_status_timeline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_status_timeline"
            app:layout_constraintBottom_toTopOf="@id/tv_status_date"/>

        <com.nyotek.dot.admin.widgets.NSPrimaryLightTextView
            android:id="@+id/tv_status_date"
            style="@style/LayoutWidthHeightZeroWrap"
            tools:text="Order Placed"
            android:textSize="@dimen/_3sdp"
            android:textAlignment="viewStart"
            android:fontFamily="@font/archivo_medium"
            android:paddingStart="@dimen/_4sdp"
            android:paddingEnd="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_1sdp"
            android:includeFontPadding="false"
            app:layout_constraintStart_toEndOf="@id/iv_status_timeline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_status_title"
            app:layout_constraintBottom_toBottomOf="@id/iv_status_timeline"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>