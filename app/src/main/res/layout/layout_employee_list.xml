<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/cl_employee" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/LayoutWidthHeightMatchWrap">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_employee_item"
        style="@style/LayoutWidthHeightZeroWrap"
        android:paddingHorizontal="@dimen/_4sdp"
        app:layout_constraintBottom_toTopOf="@id/view_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_employee_item2"
            style="@style/LayoutWidthHeightZeroWrap"
            android:paddingVertical="@dimen/_6sdp"
            app:layout_constraintEnd_toStartOf="@id/switch_service"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.nyotek.dot.admin.widgets.NSPrimaryTextView
                android:id="@+id/tv_employee_title"
                style="@style/LayoutWidthHeightZeroWrap"
                android:gravity="start"
                android:lines="1"
                android:paddingStart="0dp"
                android:paddingEnd="@dimen/_4sdp"
                android:textAppearance="@style/CommonTextMedium"
                android:textSize="@dimen/_5sdp"
                android:textAlignment="viewStart"
                app:layout_constraintBottom_toTopOf="@id/tv_description"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                tools:text="Employee 01" />

            <com.nyotek.dot.admin.widgets.NSWhiteTextView
                android:id="@+id/tv_add_address"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_12sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_3sdp"
                android:gravity="center"
                android:minWidth="@dimen/_34sdp"
                android:paddingHorizontal="@dimen/_2sdp"
                android:textSize="@dimen/_5sdp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/tv_employee_title"
                app:layout_constraintStart_toEndOf="@id/tv_employee_title"
                app:layout_constraintTop_toTopOf="@id/tv_employee_title" />

            <com.nyotek.dot.admin.widgets.NSPrimaryLightTextView
                android:id="@+id/tv_description"
                style="@style/LayoutWidthHeightZeroWrap"
                android:layout_marginTop="@dimen/_2sdp"
                android:gravity="start"
                android:lines="1"
                android:paddingStart="0dp"
                android:paddingEnd="@dimen/_5sdp"
                android:textAlignment="viewStart"
                android:textAppearance="@style/CommonTextRegular"
                android:textSize="@dimen/_4sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_employee_title"
                tools:text="654 658 579 143" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/switch_service"
            android:layout_width="@dimen/_12sdp"
            android:layout_height="@dimen/_7sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:src="@drawable/ic_switch_off"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iv_edit"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_edit"
            android:layout_width="@dimen/_7sdp"
            android:layout_height="@dimen/_7sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:src="@drawable/ic_edit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iv_delete"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="@dimen/_7sdp"
            android:layout_height="@dimen/_7sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:src="@drawable/ic_delete_employee"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="0dp"
        android:layout_height="0.6dp"
        android:background="@color/line_divider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>