<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Nyo" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_500</item>
        <item name="colorSecondaryVariant">@color/purple_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="LayoutWidthHeightMatchMatch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="LayoutWidthHeightMatchWrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LayoutWidthHeightZeroWrap">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="LayoutWidthHeightZero">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="LayoutWidthHeightWrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="MyBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/MYBottomSheetStyle</item>
    </style>

    <style name="MYBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimAmount">0</item>
    </style>

    <style name="LoginHeadingFontsWrap" parent="LayoutWidthHeightWrap">
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>

    <style name="LoginSubFontsWrap" parent="LayoutWidthHeightWrap">
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="LoginFontsZeroWrap" parent="LayoutWidthHeightZeroWrap">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:gravity">start|center</item>
    </style>

    <style name="LoginSubFontsZeroWrap" parent="LayoutWidthHeightZeroWrap">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="CommonText">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/_5sdp</item>
    </style>

    <style name="CommonTextSemiBold" parent="CommonText">
        <item name="android:fontFamily">@font/archivo_semi_bold</item>
    </style>

    <style name="CommonTextRegular" parent="CommonText">
        <item name="android:fontFamily">@font/archivo_regular</item>
    </style>

    <style name="CommonTextMedium" parent="CommonText">
        <item name="android:fontFamily">@font/archivo_medium</item>
    </style>

    <style name="CommonTextInter400" parent="CommonText">
        <item name="android:fontFamily">@font/inter_400</item>
    </style>

    <style name="CommonTextInter500" parent="CommonText">
        <item name="android:fontFamily">@font/inter_500</item>
    </style>

    <style name="CommonTextInter600" parent="CommonText">
        <item name="android:fontFamily">@font/inter_600</item>
    </style>

    <style name="ServiceCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_6sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/archivo_semi_bold</item>
        <item name="android:fontFamily">@font/archivo_semi_bold</item>
    </style>

    <style name="TextInputStyle" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/_4sdp</item>
        <item name="fontFamily">@font/archivo_regular</item>
        <item name="android:fontFamily">@font/archivo_regular</item>
    </style>

    <style name="AVLoadingIndicatorView">
        <item name="minWidth">@dimen/_18sdp</item>
        <item name="maxWidth">@dimen/_18sdp</item>
        <item name="minHeight">@dimen/_18sdp</item>
        <item name="maxHeight">@dimen/_18sdp</item>
        <item name="indicatorName">LineScaleIndicator</item>
    </style>
</resources>